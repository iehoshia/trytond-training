<form string="Course" col="8">
    <label name="name"/>
    <field name="name" xexpand="1"/>
    <label name="duration"/>
    <field name="duration"/>
    <label name="code"/>
    <field name="code"/>
    <newline />
    <notebook colspan="8">
    	<page string="Description" col="6" id="description">
            <label name="type"/>
    		<field name="type"/>
    		<label name="category"/>
    		<field name="category"/>
    		<label name="faculty"/>
    		<field name="faculty"/>
    		<newline />
    		<label name="description"/>
    		<field name="description" colspan="6"/>
        </page>
        <page string="Children" col="2" id="childs">
            <label name="parent"/>
            <field name="parent"/>
            <newline />
            <field name="childs" colspan="6"/>
        </page>
    </notebook>
    <newline />
    <group col="2" colspan="2" id="states">
		<label name="state"/>
        <field name="state"/>
	</group>
	<group col="4" colspan="6" id="buttons">
		<button name="cancel" string="Cancel"
			icon="tryton-cancel"/>
		<button name="draft" string="Draft"
			icon="tryton-go-next"/>
		<button name="open" string="Open"
			icon="tryton-go-next"/>
		<button name="done" string="Done"
			icon="tryton-go-next"/>
	</group>
</form>
