<form string="Student">
<!-- Main Info -->
	
	<group string="Main Info"  id="student_main_info">
		<group colspan="3" id="student_main_info_name">
	        <group  colspan="3" col="10" id="patient_main_info_3">
	            <field colspan="5" name="name"/>
	            <field name="sex" width="60"/>
	            <label name="age"/>
	            <field name="age" width="80"/>
	            <label name="active"/>
	            <field name="active"/>
	            <newline />
	            <field name="identification_code" width="80"/>
	        </group>

	        <newline/>
	
	    </group>
	
	    <group id="patient__pic">
	        <field xfill="0" xexpand="1" name="photo" img_width="200" img_height="200"
	            height="200" width="200" widget="image"/>
	    </group>
	
	</group>

    <newline/>

    <notebook>
        <page string="General Info" id="general_info">
            <notebook>

                <page string="Main" id="main_info_page">
                    <group colspan="4" col="8" id="general_info">
                        <field name="marital_status"/>
                    </group>

                    <newline/>

                    <group colspan="4" col="8" id="patient_info_2">
                        <label name="dob"/>
                        <field name="dob"/>
                        <label name="blood_type"/>
                        <field name="blood_type" width="20"/>
                        <field name="rh" width="20"/>
                    </group>

                </page>

                <page string="Misc" id="misc_info_page" col="4">
                    <group colspan="4" id="misc_info_group">
                        <label name="current_address"/>
                        <field name="current_address"/>
                        <newline />
                        <label name="mobile"/>
                        <field name="mobile"/>
                        <label name="phone"/>
                        <field name="phone"/>
                        <label name="fax"/>
                        <field name="fax"/>
                        <label name="email"/>
                        <field name="email"/>
                        <label name="website"/>
                        <field name="website"/>
                    </group>                    
				</page>
				<page string="Notes" id="notes_page">
					<field name="notes"/>
				</page>
            </notebook>
        </page>

	</notebook>
</form>